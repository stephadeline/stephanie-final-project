{% extends '_layouts/base.njk' %}


{% block page_title %}{{members.name}}{% endblock %}

{% block content %}
<div class="container">
  <h1>About {{members.name}}</h1>

<div class="row">
  <div class="col-sm-4 biodata">
   <img class="profile img-fluid" src="../assets/img/members/{{members.image}}" alt="photo of {{members.name}}" />
 <dl>
   <dt>Full Name:</dt>
   <dd>{{ members.name}}</dd>
   <dt>Instruments:</dt>
   <dd>{{ members.instruments}}</dd>
   <dt>Tenure:</dt>
   <dd>{{ members.tenure}}</dd>
   <dt>Birthplace:</dt>
   <dd>{{members.birthplace}}</dd>
   <dt>Birthdate:</dt>
   <dd>{{members.birthdate}}</dd>
 </dl>
  </div>
  <div class="col-sm-8 member-story">
    {{ members.text | safe}}
  </div>
</div>
</div>
{% endblock %}

